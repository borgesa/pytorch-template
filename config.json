{
    "name": "Mnist_LeNet",
    "cuda": true,
    "gpu": 0,
    "dataset": {
        "type": "MnistDataset",
        "transforms": [
            {"op": "ToTensor"},
            {"op": "Normalize",
                "mean": "(0.1307,)",
                "std": "(0.3081,)"}
        ],
        "kwargs": {
            "root": "./datasets/mnist/",
            "train": true,
            "download": true
        }
    },
    "data_loader": {
        "type": "PyTorch",
        "shuffle_data": true,
         "train": {
            "kwargs": {
                "batch_size": 32
            }
        },
        "validation": {
            "split": 0.1,
            "kwargs": {
                "batch_size": 32
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "kwargs": {
            "lr": 0.001,
            "weight_decay": 0
        },
        "lr_scheduler": {
            "type": "ExponentialLR",
            "step_freq": 1,
            "kwargs":
            {
                "gamma": 0.8685113737513527
            }
        }
    },
    "loss": "NLLLoss",
    "loss_args": {
        "reduction": "elementwise_mean"
    },

    "metrics": ["my_metric", "my_metric2"],
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "saved/runs"
    },
    "arch": "MnistModel", 
    "model": {

    }
}
